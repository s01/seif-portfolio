# Client-Side Environment Variables (Vite)
# These are exposed to the browser (prefixed with VITE_)
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Server-Side Environment Variables (Vercel Only)
# These are ONLY available in Vercel serverless functions
# DO NOT prefix with VITE_ - they should remain server-side only
# Set these in Vercel Dashboard → Settings → Environment Variables

# Firebase Admin SDK (for server-side Firestore writes)
# Get these from Firebase Console → Project Settings → Service Accounts → Generate New Private Key
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your_project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour\nPrivate\nKey\nHere\n-----END PRIVATE KEY-----\n"

# Analytics API Protection (optional but recommended)
# Generate a secure random string: openssl rand -base64 32
ANALYTICS_API_KEY=your_secure_random_key_here

# IP Hashing Salt (optional, for privacy)
# Generate a secure random string: openssl rand -base64 32
IP_HASH_SALT=your_random_salt_here
